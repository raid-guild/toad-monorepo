{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["dist/**/*", "node_modules/**/*", ".next/**/*", ".turbo/**/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "warn",
                "useExhaustiveDependencies": "warn"
            },
            "style": {
                "useImportType": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    }
}
